<script>
    function changeView() {
        const wrapper = document.getElementById("wrapper")

        const content = "<div><h1>Otsikko on tämä</h1> <p role='status'> Tämä teksti pitäisi tulla luetuksi kivasti.</p><div><Label htmlFor='emailAddress'>Sähköpostiosoite</Label><input id='emailAddress' type='email' autoComplete='email' aria-required=true placeholder='Syötä sähköpostiosotteesi' autofocus /></div>"
        
        wrapper.innerHTML = content
    }

</script>
